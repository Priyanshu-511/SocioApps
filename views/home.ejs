                }

                .upload-btn {
                    background: linear-gradient(225deg, #ff6b6b, #4ecdc4);
                    color: #fff;
                }

                .clear-btn {
                    background: rgba(255, 255, 255, 0.15);
                    color: #fff;
                }

                .upload-btn:hover,
                .clear-btn:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 8px 25px rgba(255, 107, 107, 0.6);
                }

                .upload-btn:focus,
                .clear-btn:focus {
                    outline: none;
                    box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.4);
                }

                .upload-btn .btn-loading {
                    font-size: 14px;
                }

                @media (max-width: 768px) {
                    .upload-container {
                        padding: 20px;
                    }

                    .upload-container h2 {
                        font-size: 28px;
                    }

                    .form-group label {
                        font-size: 16px;
                    }

                    .form-group input[type="file"],
                    .form-group input[type="text"],
                    .form-group textarea {
                        font-size: 14px;
                        padding: 10px 15px;
                    }

                    .file-info,
                    .char-count {
                        font-size: 12px;
                    }

                    .file-preview h4 {
                        font-size: 18px;
                    }

                    .form-actions {
                        flex-direction: column;
                        gap: 10px;
                    }

                    .upload-btn,
                    .clear-btn {
                        width: 100%;
                        max-width: 350px;
                        padding: 10px 20px;
                        font-size: 14px;
                    }
                }

                @media (max-width: 480px) {
                    .upload-container {
                        padding: 15px;
                    }

                    .upload-container h2 {
                        font-size: 24px;
                    }

                    .form-group label {
                        font-size: 14px;
                    }

                    .form-group input[type="file"],
                    .form-group input[type="text"],
                    .form-group textarea {
                        font-size: 13px;
                        padding: 8px 12px;
                    }

                    .file-preview {
                        padding: 15px;
                    }

                    .file-preview h4 {
                        font-size: 16px;
                    }

                    #previewContent {
                        font-size: 14px;
                    }

                    .upload-btn,
                    .clear-btn {
                        font-size: 13px;
                        padding: 8px 15px;
                    }
                }
            </style>
        </section>

        <section id="account">
            <h6>
                <%= userMessage %>
            </h6>
            <h6>
                <%= userEmail %>
            </h6>
            <% if (error) { %>
                <p class="error">
                    <%= error %>
                </p>
                <% } %>
        </section>
    </div>

    <script src="/home.js"></script>
    <script src="/work.js"></script>
</body>

</html>